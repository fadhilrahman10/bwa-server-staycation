<div class="card shadow mb-4 mt-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <a href="/admin/booking" class="btn btn-primary"
        ><i class="fas fa-angle-double-left"></i> Back</a
      >
    </h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://admin-bwa-mern.herokuapp.com/<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />
        <% if (booking.payments.status == 'Proses') { %>
        <div class="row ml-2 my-4">
          <div class="col">
            <form
              action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
              method="POST"
            >
              <button type="submit" class="btn btn-danger">
                <i class="fas fa-times"></i>
                Reject
              </button>
            </form>
          </div>
          <div class="col">
            <form
              action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
              method="post"
            >
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                Confirm
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= `${booking.memberId.firstName}
                  ${booking.memberId.lastName}` %>
                </td>
                <td><%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
