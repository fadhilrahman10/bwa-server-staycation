<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form
        method="post"
        action="/admin/bank?_method=PUT"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="form-group">
            <label for="bankName">Bank Name</label>
            <input
              type="text"
              name="bankName"
              placeholder="Type Bank Name..."
              class="form-control bank-name"
              id="bankName"
              required
            />
          </div>
          <div class="form-group">
            <label for="accountNumber">Account Number</label>
            <input
              type="text"
              name="accountNumber"
              placeholder="Type Account Number..."
              class="form-control account-number"
              id="accountNumber"
              required
            />
          </div>
          <div class="form-group">
            <label for="owner">Owner</label>
            <input
              type="text"
              name="owner"
              placeholder="Type Owner..."
              class="form-control owner"
              id="owner"
              required
            />
          </div>
          <div class="form-group">
            <label for="imageUrl">Image</label>
            <input type="file" name="image" class="form-control" />
            <span>Pilih gambar untuk update image</span>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
